@model IEnumerable<CyberShieldWeb.Models.Blog.BlogPost>
@using System.Globalization

@{
    ViewBag.Title = "Blog - CyberShield";
}

<div class="blog-container">
    <div class="container">
        <h1 class="blog-title">Blog <span class="brand-text">Cyber<span class="brand-shield">Shield</span></span></h1>
        <div class="blog-posts">
            @foreach (var post in Model)
            {
                <article class="blog-post">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="post-image">
                                <img src="@post.ImageUrl" alt="@post.Title" class="img-fluid" />
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="post-category">@post.Category</div>
                            <h2 class="post-title">@post.Title</h2>
                            <div class="post-meta">
                                <span class="post-author">De @post.Author</span>
                                <span class="post-date">@post.PostedDate.ToString("d MMMM yyyy", CultureInfo.GetCultureInfo("ro-RO"))</span>
                            </div>
                            <div class="post-summary">
                                @post.Summary
                            </div>
                            <div class="post-link">
                                @Html.ActionLink("Continuă citirea", "ArticleView", new { id = post.Id }, new { @class = "continue-reading" })
                            </div>
                        </div>
                    </div>
                </article>
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .blog-container {
            padding: 4rem 0;
            background-color: var(--light-color);
        }

        .blog-title {
            font-family: 'Lato', sans-serif;
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 3rem;
            color: var(--dark-color);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .brand-text {
            font-weight: 700;
        }

        .brand-shield {
            color: var(--primary-color);
        }

        .blog-post {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
            padding: 2rem;
            transition: transform 0.3s ease;
        }

        .blog-post:hover {
            transform: translateY(-5px);
        }

        .post-image {
            overflow: hidden;
            border-radius: 6px;
        }

        .post-image img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .post-image img:hover {
            transform: scale(1.05);
        }

        .post-category {
            display: inline-block;
            background-color: var(--primary-color);
            color: white;
            padding: 0.3rem 1rem;
            border-radius: 20px;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            font-family: 'Lato', sans-serif;
        }

        .post-title {
            font-family: 'Lato', sans-serif;
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 1rem;
            color: var(--dark-color);
        }

        .post-meta {
            font-family: 'Lato', sans-serif;
            color: var(--gray-color);
            font-size: 0.9rem;
            margin-bottom: 1rem;
        }

        .post-meta span:not(:last-child)::after {
            content: "·";
            margin: 0 0.5rem;
        }

        .post-summary {
            font-family: 'Lato', sans-serif;
            color: var(--dark-color);
            margin-bottom: 1.5rem;
            line-height: 1.6;
        }

        .continue-reading {
            font-family: 'Lato', sans-serif;
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            transition: color 0.3s ease;
        }

        .continue-reading:hover {
            color: var(--dark-color);
            text-decoration: none;
        }

        .continue-reading::after {
            content: "→";
            margin-left: 0.5rem;
            transition: transform 0.3s ease;
        }

        .continue-reading:hover::after {
            transform: translateX(5px);
        }
    </style>
} 
