@{
    ViewBag.Title = "Servicii - CyberShield";
}

<div class="container mt-5 mb-5">
    <h1 class="text-center mb-5">Serviciile Noastre</h1>

    <div class="row mb-5">
        <div class="col-md-8 offset-md-2">
            <p class="lead text-center">
                Oferim o gamă completă de servicii de securitate cibernetică pentru a proteja organizația dvs. de amenințările din mediul digital.
            </p>
        </div>
    </div>

    <div class="row justify-content-center">
        <!-- Testarea Penetrării -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-shield-alt fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Testarea Penetrării</h3>
                    <p class="card-text">Identificăm vulnerabilitățile din sistemele dvs. înainte ca atacatorii să le exploateze.</p>
                    <a href="/servicii/testarea-penetrarii" class="btn btn-primary">Detalii</a>
                </div>
            </div>
        </div>

        <!-- Consultanță -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-clipboard-check fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Consultanță</h3>
                    <p class="card-text">Oferim consultanță specializată pentru a vă ajuta să vă îmbunătățiți postura de securitate.</p>
                    <a href="/servicii/consultanta" class="btn btn-primary">Detalii</a>
                </div>
            </div>
        </div>

        <!-- Inginerie Socială -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-user-secret fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Inginerie Socială</h3>
                    <p class="card-text">Testăm rezistența organizației dvs. la atacuri de inginerie socială și phishing.</p>
                    <a href="/servicii/inginerie-sociala" class="btn btn-primary">Detalii</a>
                </div>
            </div>
        </div>

        <!-- Conformitate cu GDPR -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <div class="icon-wrapper mb-3">
                        <i class="fas fa-lock fa-3x text-primary"></i>
                    </div>
                    <h3 class="card-title">Conformitate cu GDPR</h3>
                    <p class="card-text">Vă ajutăm să vă aliniați procesele și sistemele la regulamentul GDPR.</p>
                    <a href="/servicii/conformitate-gdpr" class="btn btn-primary">Detalii</a>
                </div>
            </div>
        </div>
    </div>
</div> 
